@import "../movie-rating/movie-rating-template.wxss";

.movie-wrap {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #e6e6e6;
  padding: 30rpx;
}

.movie-content {
  display: flex;
  width: 100%;
}

.poster {
  width: 160rpx;
  height: 236rpx;
}

.movie-basic {
  display: flex;
  flex-direction: column;
  width: 380rpx;
  margin: 0 20rpx;
}

.name, .directors, .casts, .genres, .wish-count {
  line-height: 1.6em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* 用省略符号来代表被修剪的文本。 */
  word-break: keep-all;
}

.name {
  font-weight: bold;
  color: #333;
}

.directors, .casts, .genres, .wish-count {
  font-size: 24rpx;
  color: #9e9e9e;
}

.wish-count {
  color: #32CD32;
}

.ticket-btn, .wish-btn {
  width: 90rpx;
  height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 6rpx;
  text-align: center;
  line-height: 50rpx;
  align-self: center; /* 自身居中 */
}

.ticket-btn {
  color: #9bdff9;
  border: 3rpx solid #9bdff9;
}

.wish-btn {
  color: #de9703;
  border: 3rpx solid #de9703;
}
